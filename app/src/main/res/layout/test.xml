<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".document_care.myfragments.Installation_List_Sginature_Activity2"
    android:background="#D34242">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--프로젝트-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="프로젝트"/>
                <TextView
                    android:id="@+id/tv_prj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#613EDF"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!--운수사-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="운수사"/>
                <TextView
                    android:id="@+id/tv_busoff_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#613EDF"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!--차량번호-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="차량번호"/>
                <TextView
                    android:id="@+id/tv_bus_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#613EDF"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!--차대번호-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="차대번호"/>
                <TextView
                    android:id="@+id/tv_vehicle_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#613EDF"
                    android:textStyle="bold"/>
            </LinearLayout>



            <!--등록시간-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="등록시간"/>
                <TextView
                    android:id="@+id/tv_reg_dtti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#613EDF"
                    android:textStyle="bold"/>
            </LinearLayout>


            <!--사인시간-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:id="@+id/tv_doc_dtti"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="사인시간"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#613EDF"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--작업-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="작업"/>
                <TextView
                    android:id="@+id/tv_job_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#613EDF"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!--영업소-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="영업소"/>
                <TextView
                    android:id="@+id/tv_garage_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#613EDF"
                    android:textStyle="bold"/>
            </LinearLayout>


            <!--노선-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="노선" />
                <TextView
                    android:id="@+id/tv_route_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#613EDF"
                    android:textStyle="bold"/>
            </LinearLayout>


            <!--등록자-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="등록자"/>
                <TextView
                    android:id="@+id/tv_doc_emp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#613EDF"
                    android:textStyle="bold"/>
            </LinearLayout>


            <!--확인자-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="확인자"/>
                <TextView
                    android:id="@+id/tv_doc_emp_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#613EDF"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>