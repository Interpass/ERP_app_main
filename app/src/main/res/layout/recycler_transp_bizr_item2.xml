<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:background="@drawable/box_rectangle_white"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="15dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="5dp">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <!--작업, 대폐차, 확인서-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:orientation="horizontal"
               android:padding="5dp">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="60dp"
                       android:layout_height="wrap_content"
                       android:text="작업"/>

                   <TextView
                       android:id="@+id/tv_job_name"
                       android:layout_width="150dp"
                       android:layout_height="wrap_content"
                       android:textColor="#5A3CC6"
                       android:textStyle="bold"
                       android:text="대폐차" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="55dp"
                       android:layout_height="wrap_content"
                       android:text="확인서"/>
                   <TextView
                       android:id="@+id/tv_doc_dtti"
                       android:layout_width="50dp"
                       android:layout_height="wrap_content"
                       android:text="○"
                       android:textColor="#5A3CC6"
                       android:textStyle="bold"/>
               </LinearLayout>
           </LinearLayout>

       </LinearLayout>



       <!--운수사-->
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:orientation="horizontal"
           android:padding="5dp">
           <TextView
               android:layout_width="60dp"
               android:layout_height="wrap_content"
               android:text="운수사"/>
           <TextView
               android:id="@+id/tv_busoff_name"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:text="경기고속"
               android:textColor="#5A3CC6"
               android:textStyle="bold"/>
       </LinearLayout>





       <!--영업소-->
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:orientation="horizontal"
           android:padding="5dp">
           <TextView
               android:layout_width="60dp"
               android:layout_height="wrap_content"
               android:text="영업소"/>
           <TextView
               android:id="@+id/garage_name"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:text="경기고속(감곡TR)"
               android:textColor="#5A3CC6"
               android:textStyle="bold"/>
       </LinearLayout>

       <!--<LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:orientation="horizontal"
           android:padding="5dp">
           <TextView
               android:layout_width="60dp"
               android:layout_height="wrap_content"
               android:text="차량번호"/>
           <TextView
               android:id="@+id/tv_bus_num"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:text="인천10아1234"
               android:textColor="#5A3CC6"
               android:textStyle="bold"/>
       </LinearLayout>-->



       <!--차량번호, 노선-->
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:gravity="center_vertical"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:orientation="horizontal"
               android:padding="5dp">
               <TextView
                   android:layout_width="60dp"
                   android:layout_height="wrap_content"
                   android:text="차량번호"/>
               <TextView
                   android:id="@+id/tv_bus_num"
                   android:layout_width="150dp"
                   android:layout_height="wrap_content"
                   android:text="인천10아1234"
                   android:textColor="#5A3CC6"
                   android:textStyle="bold"/>
           </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="55dp"
                   android:layout_height="wrap_content"
                   android:text="노선"/>

               <TextView
                   android:id="@+id/tv_route_num"
                   android:layout_width="50dp"
                   android:layout_height="match_parent"
                   android:text="25-20"
                   android:textColor="#5A3CC6"
                   android:textStyle="bold"/>
           </LinearLayout>

           <TextView
               android:id="@+id/tv_bus_id"
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:text=""/>

           <TextView
               android:id="@+id/tv_reg_dtti"
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:text=""/>

           <TextView
               android:id="@+id/tv_table_name"
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:text=""/>



       </LinearLayout>
   </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/box_rectangle_white_left">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>