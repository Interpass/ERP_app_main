<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_weight="1">


    <View
        android:layout_width="210dp"
        android:layout_height="1dp"
        android:background="#DAD6D6"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tv_job_text"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#7B65FB"
            android:textStyle="bold"
            android:text="차량전면"
            android:paddingTop="4dp"
            android:paddingLeft="20dp"/>
        <EditText
            android:id="@+id/et_bus_num"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:hint="일련번호 입력"
            android:textSize="12sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/tv_job_text"/>
    </RelativeLayout>






    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:background="#9A98A3"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/iv_take_pic"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:background="@drawable/rectangle_dot_layout"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_take_pic2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_insert_photo_grey" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_take_pic"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#9784DC"
                android:gravity="center"
                android:text="미리보기"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>