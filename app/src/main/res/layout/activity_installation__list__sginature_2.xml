<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".document_care.myfragments.Installation_List_Sginature_Activity2"
    android:background="#E8E8F3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/box_rectangle_white"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="프로젝트"/>
            <TextView
                android:id="@+id/tv_prj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#5A3CC6"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="작업"/>

            <TextView
                android:id="@+id/tv_job_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#5A3CC6"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="운수사"/>
            <TextView
                android:id="@+id/tv_busoff_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#5A3CC6"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">
            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="영업소"/>
            <TextView
                android:id="@+id/tv_garage_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#5A3CC6"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="차량번호"/>

                    <TextView
                        android:id="@+id/tv_bus_num"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="#5A3CC6"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="차대번호"/>
                    <TextView
                        android:id="@+id/tv_vehicle_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="#5A3CC6"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="등록시간"/>
                    <TextView
                        android:id="@+id/tv_reg_dtti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="#5A3CC6"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="사인시간"/>
                    <TextView
                        android:id="@+id/tv_doc_dtti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="#5A3CC6"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="노선"/>
                    <TextView
                        android:id="@+id/tv_route_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#5A3CC6"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="등록자"/>
                    <TextView
                        android:id="@+id/tv_reg_emp_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#5A3CC6"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="확인자"/>
                    <TextView
                        android:id="@+id/tv_doc_emp_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#5A3CC6"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--사진 리사이클러뷰-->
            <TextView
                android:id="@+id/tv_photo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="※ 업로드한 단말기 사진"
                android:textColor="#5A3CC6"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:visibility="invisible"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_install_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"/>




            <!--케이블 리사이클러뷰-->
            <TextView
                android:id="@+id/tv_cable_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="※ 신청한 케이블 아이템"
                android:textColor="#5A3CC6"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:visibility="invisible"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_cable"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"/>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="확인"
                android:textColor="#ffffff"
                android:layout_marginBottom="20dp"
                android:background="@drawable/box_in_out2"
                android:layout_marginRight="25dp"/>
        </LinearLayout>


    </ScrollView>
</LinearLayout>