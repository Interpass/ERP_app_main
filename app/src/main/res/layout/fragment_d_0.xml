<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgContent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/radio_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_top_bottom">

        <RadioGroup
            android:id="@+id/trouble_history_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/trouble_bus"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:background="@drawable/radio_button"
                android:text="버스"
                android:textSize="@dimen/middle_font_size"
                android:textAlignment="center"/>

            <RadioButton
                android:id="@+id/trouble_nms"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:background="@drawable/radio_button"
                android:text="집계"
                android:textSize="@dimen/middle_font_size"
                android:textAlignment="center"/>

            <RadioButton
                android:id="@+id/trouble_chager"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:background="@drawable/radio_button"
                android:text="충전기"
                android:textSize="@dimen/middle_font_size"
                android:textAlignment="center"/>

            <RadioButton
                android:id="@+id/trouble_bit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:background="@drawable/radio_button"
                android:text="BIT"
                android:textSize="@dimen/middle_font_size"
                android:textAlignment="center"/>

            <RadioButton
                android:id="@+id/trouble_nomal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:background="@drawable/radio_button"
                android:text="일반업무"
                android:textSize="@dimen/middle_font_size"
                android:textAlignment="center"/>

        </RadioGroup>

    </LinearLayout>

    <ListView
        android:id="@+id/my_error_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>