<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@drawable/box3_dot_layout"
    android:layout_marginBottom="15dp">
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="품목"
                android:textSize="12sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#7A61D5"
                android:background="@drawable/transparent_circle_grey_outline"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/item_group_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:text="품목"
                android:textColor="#555555"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="상세품목"
                android:textSize="12sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#7A61D5"
                android:layout_marginLeft="10dp"
                android:background="@drawable/transparent_circle_grey_outline"/>
            <TextView
                android:id="@+id/item_each_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:text="상세품목"
                android:textStyle="bold"
                android:textColor="#555555"
                android:paddingLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_quantity_recycler"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="3"
        android:textColor="#555555"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="삭제"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:background="@drawable/purple_box"
        android:layout_toRightOf="@+id/item_group_name"/>
</LinearLayout>