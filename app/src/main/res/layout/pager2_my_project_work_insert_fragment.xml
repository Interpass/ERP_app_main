<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background3_1">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="※ 케이블 설치목록"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">
                <!--작업-->
                <RelativeLayout
                    android:id="@+id/infra_job_spinner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_dot_layout_purple"
                    android:backgroundTint="#88ffffff">
                    <TextView
                        android:id="@+id/infra_job_title"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="작업"
                        android:textSize="12sp"
                        android:textColor="#5A3CC6"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/box_in_out3_border_white_thin"/>
                    <TextView
                        android:id="@+id/infra_job"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="전 단계 정보고정"
                        android:textSize="13sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/infra_job_title"
                        android:padding="10dp"
                        android:layout_margin="5dp"/>
                </RelativeLayout>

                <!--운수사 구분 -->
                <RelativeLayout
                    android:id="@+id/office_group_layout"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_dot_layout_purple"
                    android:backgroundTint="#88ffffff">
                    <TextView
                        android:id="@+id/office_group_title"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="운수사 구분"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#5A3CC6"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/box_in_out3_border_white_thin"/>
                    <TextView
                        android:id="@+id/office_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="전 단계 정보고정"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_toRightOf="@id/office_group_title"
                        android:padding="10dp"
                        android:layout_margin="5dp"/>
                </RelativeLayout>


                <!--운수회사 명  -->
                <RelativeLayout
                    android:id="@+id/busoff_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_dot_layout_purple"
                    android:backgroundTint="#88ffffff">
                    <TextView
                        android:id="@+id/busoff_name_title"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="운수회사명"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#5A3CC6"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/box_in_out3_border_white_thin"/>
                    <TextView
                        android:id="@+id/busoff_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="전 단계 정보고정"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_toRightOf="@id/busoff_name_title"
                        android:padding="10dp"
                        android:layout_margin="5dp"/>
                </RelativeLayout>


                <!--운수회사 고정번호 -->
                <RelativeLayout
                    android:id="@+id/transp_bizr_id_layou"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_dot_layout_purple"
                    android:backgroundTint="#88ffffff">
                    <TextView
                        android:id="@+id/transp_bizr_id_title"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="운수회사 고정번호"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#5A3CC6"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/box_in_out3_border_white_thin"/>
                    <TextView
                        android:id="@+id/transp_bizr_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="전 단계 정보고정"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_toRightOf="@id/transp_bizr_id_title"
                        android:padding="10dp"
                        android:layout_margin="5dp"/>
                </RelativeLayout>



            </LinearLayout>


            <LinearLayout
                android:id="@+id/project_item_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:background="@drawable/box_white_bottom_round">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="※ 요청한 품목/ 상세품목/ 수량을 선택하세요"
                    android:textSize="13sp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal"
                    android:background="@drawable/box_in_out3_border_rec"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="5dp">
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="품목"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#7B65FB"
                                android:padding="8dp"
                                android:background="@drawable/box_in_out3_border"/>

                            <Spinner
                                android:id="@+id/spinner_item_group_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="10dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="5dp">
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="상세품목"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#7B65FB"
                                android:padding="8dp"
                                android:background="@drawable/box_in_out3_border"/>
                            <Spinner
                                android:id="@+id/spinner_item_each_name"
                                android:layout_width="170dp"
                                android:layout_height="match_parent"
                                android:paddingLeft="10dp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--수량 버튼-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:background="@drawable/box_in_out3_border_rec"
                            android:padding="3dp"
                            android:layout_marginTop="5dp">
                            <ImageView
                                android:id="@+id/iv_minus"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/ic_minus" />
                            <TextView
                                android:id="@+id/tv_quantity_value"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:text="1"
                                android:textSize="17sp"
                                android:textStyle="bold"/>
                            <ImageView
                                android:id="@+id/iv_plus"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/ic_plus"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:text="추가"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:background="@drawable/erp_btn_orange"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>



                </LinearLayout>



                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#555555"
                    android:layout_marginTop="30dp"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="선택한 상세목록 확인"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#5A3CC6"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="#EBE0F6"
                    android:padding="8dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:paddingTop="15dp">
                </androidx.recyclerview.widget.RecyclerView>



            </LinearLayout>



            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pager1"
                    android:layout_margin="30dp"/>
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_pager2"
                    android:layout_margin="30dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_pager3"
                    android:layout_margin="30dp"/>
            </LinearLayout>-->
        </LinearLayout>

    </ScrollView>

</LinearLayout>
