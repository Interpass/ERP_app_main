<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    tools:context=".ReleaseRequestActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_margin="5dp">
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_toLeftOf="@id/tv_app_bar_title"
                        android:src="@drawable/ic_backspace_black_40dp"
                        android:layout_marginRight="60dp"/>
                    <TextView
                        android:id="@+id/tv_app_bar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="단말기 출고신청"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_centerInParent="true"/>

                    <ImageView
                        android:id="@+id/iv_nav_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="70dp"
                        android:layout_toRightOf="@+id/tv_app_bar_title"
                        android:src="@drawable/ic_menu_black_40dp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_area"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:background="@drawable/btn_area"
                            android:text="지부"
                            android:textStyle="bold"/>


                        <Spinner
                            android:id="@+id/spinner_area"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />
                    </LinearLayout>




                    <RelativeLayout
                        android:id="@+id/calendar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_release_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="출고 요청일: "
                            android:textSize="16dp"
                            android:layout_centerVertical="true"
                            android:textColor="#E7454343"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_show_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="날짜 선택"
                            android:textSize="16dp"
                            android:textColor="#265FDA"
                            android:layout_toRightOf="@id/tv_release_date"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:layout_gravity="right"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"/>


                        <ImageView
                            android:id="@+id/iv_calendar"
                            android:layout_width="35dp"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@id/tv_show_date"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_date_range_black_30dp" />

                    </RelativeLayout>
                </LinearLayout>







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--    단말기 분류-->
                    <RelativeLayout
                        android:id="@+id/termimal_box"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_margin="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_category">
                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분류"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:textColor="#E7454343"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"/>
                        <Spinner
                            android:id="@+id/spinner_terminal"
                            android:layout_width="800dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_category"
                            android:layout_marginTop="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/release_location_box"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_margin="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_category">
                        <TextView
                            android:id="@+id/tv_release_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="출고위치"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:textColor="#E7454343"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"/>
                        <Spinner
                            android:id="@+id/spinner_release_location"
                            android:layout_width="800dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_release_location"
                            android:layout_marginTop="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>







                <!--        단말기 재고 개수.....파란버튼-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2C2B2B"
                    android:textSize="18dp"
                    android:text="선택현황"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#2C2B2B"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_margin="10dp">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_selected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layoutManager="android.support.v7.widget.GridLayoutManager"
                        app:spanCount="3"/>


                    <!--<TextView
                        android:id="@+id/tv_tag_test_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="unit_code 와 rep_unit_code 확인 테스트"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_below="@id/recyclerview_selected"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:id="@+id/tv_tag_test"
                        android:layout_below="@id/tv_tag_test_title"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="#000000"/>-->
                </RelativeLayout>







                <!--    재고 리스트-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_stock_list_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="재고 리스트"
                        android:layout_gravity="center"
                        android:textColor="#2C2B2B"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_margin="10dp"/>
                    <Button
                        android:id="@+id/btn_delete"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="#E7454343"
                        android:layout_gravity="center"
                        android:text="삭제"
                        android:textColor="@color/white"
                        android:layout_marginLeft="160dp"
                        android:layout_marginRight="10dp"
                        android:onClick="clickDeleteStockList"/>
                    <Button
                        android:id="@+id/btn_all"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="#265FDA"
                        android:layout_gravity="center"
                        android:text="전체"
                        android:textColor="@android:color/white"
                        android:onClick="clickAllStockList"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/border_background"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:weightSum="4">
                    <TextView
                        android:id="@+id/tv_rnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="순번"
                        android:textAlignment="center"
                        android:layout_weight="0.5"
                        android:textColor="#E7454343"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_unit_ver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="        분류/제품명"
                        android:textColor="#E7454343"
                        android:textStyle="bold"
                        android:layout_weight="1.0"/>
                    <!--<TextView
                        android:id="@+id/tv_stock_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제품명"
                        android:textColor="#E7454343"
                        android:textStyle="bold"
                        android:layout_weight="1.5"/>-->
                    <TextView
                        android:id="@+id/tv_unit_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="          제품번호"
                        android:textColor="#E7454343"
                        android:textStyle="bold"
                        android:layout_weight="1.5"/>
                    <!--<CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.5"
                        />-->
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_stock_list"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager">

                </android.support.v7.widget.RecyclerView>



                <!--  출고 단말기 - 특이사항 메세지...   -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출고시 요청사항"
                        android:textColor="#2C2B2B"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/box">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="@string/editText_hint"
                            android:textSize="14sp"
                            android:layout_margin="16dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!--<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/tv_release_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출고 위치"
                        android:layout_centerVertical="true"
                        android:textColor="#E7454343"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_release_location"
                        android:background="@drawable/btn_category">
                        <Spinner
                            android:id="@+id/spinner_release_location"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="19dp"/>
                    </RelativeLayout>
                </RelativeLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>


            </LinearLayout>

        </ScrollView>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_cancel"
                android:onClick="clickCancel"
                android:text="취소"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/btn_cancel"
                android:background="@drawable/btn_ok"
                android:onClick="clickOK"
                android:text="완료"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/activity_main_drawer"
        android:layout_gravity="start"/>


</android.support.v4.widget.DrawerLayout>